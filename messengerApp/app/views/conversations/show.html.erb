<div align='center'>
	<h1>Chatting with <%= @conversation.with(current_user).email %></h1>
</div>	

<div id="conversation-main">
  <div id="conversation-body">
    <%= render 'personal_messages/personal_message' %>
  </div>

  <div id='message_form'>
	  <%= form_for @personal_message do |f| %>
	    <%= hidden_field_tag 'conversation_id', @conversation.id %>
	    <%= f.text_area :body, style: 'width:100%;', :id=> 'message_box'%>
	     <%= f.submit "send", class: "btn btn-primary", style: "display: none", data: {send: "message"}, :id=> 'messange_send'%>
	  <% end %>
	</div>  
</div>

<script type="text/javascript">
	
	$(window).load(function() {
  		$("html, body").animate({ scrollTop: $(document).height() }, 1000);
	});

	var str = $('messange_box').val();

	$('#message_box').keypress(function(e){
      if(e.which == 13){
           $('#messange_send').click();
           $('#message_box').val("");
          //trim white space
       }
    });

</script>

